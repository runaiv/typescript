{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "lib": ["ESNext"],
      "allowJs": false,
      "noEmit": false,
      "outDir": ".dist",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": false
